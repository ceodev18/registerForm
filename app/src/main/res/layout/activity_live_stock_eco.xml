<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelly.registerform.view.livestock.LiveStockEcoActivity">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:gravity="center"
                android:text="3.2"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circle_textview"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textAlignment="center"
                    android:text="Producción Pecuaria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="italic"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textAlignment="center"
                    android:text="Menciona todas las prácticas ecológicas pecuarias que utilizas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_margin="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Prácticas de manejo sanitario (*)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.thomashaertel.widget.MultiSpinner
            android:background="@drawable/background_spinner"
            android:layout_margin="10dp"
            android:id="@+id/spinnerMulti1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Prácticas de alimentación (*)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.thomashaertel.widget.MultiSpinner
            android:layout_margin="10dp"
            android:background="@drawable/background_spinner"
            android:id="@+id/spinnerMulti2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Otras prácticas agroecológicas y ambientales (*)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.thomashaertel.widget.MultiSpinner
            android:background="@drawable/background_spinner"
            android:layout_margin="10dp"
            android:id="@+id/spinnerMulti3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="(*) Campo obligatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <Button
                android:layout_margin="5dp"
                android:background="@color/colorBlueLightButton"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:id="@+id/b_next"
                android:text="@string/b_next"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <Button
                android:layout_margin="5dp"
                android:background="@color/colorWhite"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:id="@+id/b_back"
                android:text="@string/b_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
