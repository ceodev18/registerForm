<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioButton
            android:layout_margin="5dp"
            android:text="Cultivo Anual"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_textview"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/et_area"
                android:padding="5dp"
                android:background="#00000000"
                android:inputType="number|numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Area de cultivo Anual"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_margin="5dp"
            android:text="Elije el tipo de medida del área"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/s_size"
            android:background="@drawable/background_spinner"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <TextView
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_margin="5dp"
            android:text="Fecha de siembra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="5dp"
            android:background="@drawable/background_textview"
            android:id="@+id/tv_siembra"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presione para seleccionar fecha"/>

        <TextView
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_margin="5dp"
            android:text="Fecha de cosecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="5dp"
            android:background="@drawable/background_textview"
            android:id="@+id/tv_cosecha"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presione para seleccionar fecha"/>


        <TextView

            android:layout_margin="5dp"
            android:text="Porcentaje de consumo propio (%)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/s_propio"
            android:entries="@array/sa_percentage"
            android:background="@drawable/background_spinner"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <TextView
            android:layout_margin="5dp"
            android:text="Porcentaje para Semilla (%) (*)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/s_semilla"

            android:background="@drawable/background_spinner"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <TextView
            android:layout_margin="5dp"
            android:text="Porcentaje para de venta (%)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/s_venta"
            android:entries="@array/sa_percentage"
            android:background="@drawable/background_spinner"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <TextView
            android:layout_margin="5dp"
            android:text="Principal sistema de riego usado"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/s_riego_usado"
            android:background="@drawable/background_spinner"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_textview"
            android:layout_margin="5dp">

            <EditText
                android:inputType="number"
                android:id="@+id/et_estimado"
                android:padding="5dp"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Produccion estimada (cantidad)"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_margin="5dp"
            android:text="Producción Estimada (medida)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/s_medida_produccion"
            android:background="@drawable/background_spinner"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>



</ScrollView>