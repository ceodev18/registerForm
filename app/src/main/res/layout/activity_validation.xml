<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelly.registerform.view.partner.ValidationActivity"
    android:layout_margin="10dp">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6">
        <TextView
            android:gravity="center"
            android:text="6.1"
            android:textColor="@color/colorWhite"
            android:background="@drawable/circle_textview"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:textColor="@color/colorGreenBar"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:text="Vigencia de ser Socio(a)"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Fecha de Inscripción"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:text="2018-02-25"
                android:enabled="false"
                android:layout_margin="5dp"
                android:inputType="text"
                android:id="@+id/et_inscripcion"
                android:padding="5dp"
                android:background="@drawable/background_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_margin="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Fecha de Caducidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:text="A 2 años de ser aceptada su solicitud como socio de ANPE"
                android:layout_margin="5dp"
                android:inputType="text"
                android:enabled="false"
                android:padding="5dp"
                android:background="@drawable/background_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorBlueLightButton"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:id="@+id/b_next"
                android:text="Terminar Suscripción"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

            <Button
                android:layout_margin="5dp"
                android:background="@color/colorWhite"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:id="@+id/b_back"
                android:text="@string/b_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
