<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/background_textview"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_insumo"
            android:padding="5dp"
            android:background="#00000000"
            android:hint="¿Cuál es el insumo usado?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_margin="10dp"
        android:text="¿Es orgánico? "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/s_organico"
        android:background="@drawable/background_spinner"
        android:entries="@array/sa_yes_no"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>
    <TextView
        android:layout_margin="10dp"
        android:text="¿Este insumo es comprado o propio?"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/s_comprado"
        android:background="@drawable/background_spinner"
        android:entries="@array/sa_bougth"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>
    <android.support.design.widget.TextInputLayout
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/background_textview"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_vendedor"
            android:padding="5dp"
            android:background="#00000000"
            android:hint="Si el insumo es comprado, a quién le compras?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/background_textview"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_codigo"
            android:padding="5dp"
            android:background="#00000000"
            android:hint="Código de certificado agroecológico de quien le compras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/background_textview"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_lugar"
            android:padding="5dp"
            android:background="#00000000"
            android:hint="Si el insumo es comprado, dónde lo compras?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>